<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginTop="16sp"
                android:src="@drawable/applogo"
                android:layout_marginStart="-16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi!"
                android:layout_marginTop="16sp"
                android:textColor="@color/maroon"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginTop="16sp"
                android:textColor="@color/maroon"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5sp"
                android:id="@+id/tvUserHomeFragmentNameofuser"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greetings of the day"
                android:layout_marginTop="16sp"
                android:textColor="@color/maroon"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="5sp"
                />

        </LinearLayout>
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:iss_auto_cycle="false"
            android:id="@+id/isUserHomeFragmentOfferImageslider2"
            app:iss_delay="2000"
            app:iss_period="2000"
            app:iss_no_dots="false"
            android:layout_margin="20dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/maroon"
        android:layout_marginBottom="20sp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/image1"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/image2"
            android:layout_weight="2"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/image3"
            android:layout_weight="3"
            />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/maroon"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bid"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ask"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H/L"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvUserHomeFragmentListmaket"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="22sp"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="5sp"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16sp"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="16sp"
        android:id="@+id/cvUserFragmentGold"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gold"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOLD"
        android:layout_below="@+id/cvUserFragmentGold"
        android:layout_marginStart="75sp"
        android:layout_marginTop="8sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="196sp"
        android:id="@+id/cvUserFragmentCoins"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/barse"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COINS,BARS"
        android:layout_below="@+id/cvUserFragmentCoins"
        android:layout_marginStart="228sp"
        android:layout_marginTop="8sp"
        />
     <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="370sp"
        android:id="@+id/cvUserFragmentloosestone"
        >
        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/stone"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOSE STONE"
        android:layout_below="@+id/cvUserFragmentloosestone"
        android:layout_marginStart="400sp"
        android:layout_marginTop="8sp"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16sp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="16sp"
        android:id="@+id/cvUserFragmentLooseDiamond"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/diamond"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOSE DIAMOND"
        android:layout_below="@+id/cvUserFragmentLooseDiamond"
        android:layout_marginStart="28sp"
        android:layout_marginTop="8sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="196sp"
        android:id="@+id/cvUserFragmentPlatinum"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pltinum"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLATINUM"
        android:layout_below="@+id/cvUserFragmentPlatinum"
        android:layout_marginStart="228sp"
        android:layout_marginTop="8sp"
        />
     <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="370sp"
        android:id="@+id/cvUserFragmentsliver"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sliver"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLIVER"
        android:layout_below="@+id/cvUserFragmentsliver"
        android:layout_marginStart="400sp"
        android:layout_marginTop="8sp"
        />

</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16sp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_marginStart="16sp"
        android:id="@+id/cvUserFragmentGoldjewellary"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/goldjewl"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOLD JEWELLARY"
        android:layout_below="@+id/cvUserFragmentGoldjewellary"
        android:layout_marginStart="30sp"
        android:layout_marginTop="8sp"
        />


</RelativeLayout>

    </LinearLayout>

</ScrollView>