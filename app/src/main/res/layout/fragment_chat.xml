<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".ChatFragment">
    <ImageView
        android:id="@+id/ivSplashScreenAppLogo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/applogo" />


    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30sp"
    android:layout_marginEnd="30sp"
    app:cardCornerRadius="12sp"
    android:gravity="center"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="16sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/support_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any questions, click the button below to chat with us on WhatsApp!"
            android:textStyle="bold"
            android:textSize="16sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ChatFragmentwhatsappbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_gravity="center"
            android:text="Chat on WhatsApp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>